# Database
DATABASE_URL="file:./dev.db"

# Stripe Keys (Get these from dashboard.stripe.com)
# Test keys start with pk_test_ and sk_test_
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE

# Stripe Price IDs (Create products in Stripe Dashboard first)
# Single Box: $20 one-time payment
NEXT_PUBLIC_STRIPE_PRICE_SINGLE=price_YOUR_SINGLE_PRICE_ID

# Monthly Subscription: $499.99/month
NEXT_PUBLIC_STRIPE_PRICE_SUBSCRIPTION=price_YOUR_SUBSCRIPTION_PRICE_ID

# Stripe Webhook Secret (Get this after creating webhook endpoint)
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# App URL (Update this when deploying to Netlify)
# Local development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# After deploying to Netlify, change to:
# NEXT_PUBLIC_APP_URL=https://your-app-name.netlify.app

# Optional: Email notifications
ADMIN_EMAIL=your-email@gmail.com

# Inventory Settings
NEXT_PUBLIC_DAILY_BOX_LIMIT=20
NEXT_PUBLIC_MAX_ORDER_QUANTITY=5
